/* pages/music/music_lyric/music_lyric.wxss */

/**@import "./fonts/fonts.wxss"; **/
@import "./fontIcon/iconfont.wxss";

.background_img {
  position: absolute;
  left: 0%;
  top: 0%;
  width: 100%;
  height: 100%;
}


/**
背景图片
*/

.bg {
  filter: blur(30px) brightness(0.8);
  background-size: cover;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  left: 0;
  top: 0;
  transform: scale(1.2);
  background-color: transparent;
}

.title {
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
}

.ly_name {
  flex-wrap: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: center;
  color: white;
}

/* swiper */

.playorlyric {
  width: 100%;
  height: 950rpx;
}

/** 旋转动画 **/

.animate {
  order: 0;
  animation: rotatepic 30s infinite linear;
  -webkit-animation: rotatepic 30s infinite linear;
  width: 592rpx;
  height: 592rpx;
  margin: 50rpx;
  margin-bottom: 100rpx;
  border-radius: 50%;
  border: 30rpx solid;
}

.pic {
  order: 0;
  width: 592rpx;
  height: 592rpx;
  margin: 50rpx;
  margin-bottom: 100rpx;
  border-radius: 50%;
  border: 30rpx solid;
  transform: rotate(0deg);
}

.lyric {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  height: 880rpx;
  overflow-y: hidden;
}

.lyric_str {
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-bottom: 50rpx;
  filter: invert(1);
  -webkit-filter: invert(1);
}

.highlight {
  text-align: center;
  margin-bottom: 50rpx;
  filter: invert(1);
  -webkit-filter: invert(1);
  color: green;
}

.common {
  text-align: center;
  margin-bottom: 50rpx;
  filter: invert(1);
  -webkit-filter: invert(1);
  font-size: 36rpx;
}

.show {
  order: 1;
  mix-blend-mode: difference;
  filter: invert(1);
   color: green;
  /* transform: translateY(-10); */
}

/** 进度条**/

.paly-ctrl {
  position: relative;
  top: 20rpx;
  display: flex;
  width: 100%;
  flex-direction: row;
  font-size: 28rpx;
}

.paly-ctrl text {
  flex: 1;
}

.paly-ctrl .main {
  flex: 10;
}

/** 播放暂停**/

.ctrl {
  width: 100%;
  display: flex;
  justify-content: center;
  text-align: center;
  box-sizing: border-box;
  padding: 0 50rpx;
  position: relative; /** ok **/
  top: 40rpx;
}

.ctrl view {
  flex: 1;
  font-size: 56rpx;
  color: rgba(8, 233, 8, 0.877);
}

/* 旋转 */

@keyframes rotatepic {
  0% {
    transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
    -webkit-transform: rotate(360deg);
  }
}

@-webkit-keyframes rotatepic {
  0% {
    transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
    -webkit-transform: rotate(360deg);
  }
}
