<!--pages/music/music_lyric/music_lyric.wxml-->
<view>
  <!-- 背景虚化 -->
  <view class="background_img">
    <image src="{{bg}}"></image>
  </view>

  <view class="title">
    <view class="ly_name">
      <text>{{lyricname}}</text>
    </view>
    <view class="{{playFlag ?'animate':''}}">
      <image class='pic' src="{{bg}}"></image>
    </view>
  </view>

  <scroll-view scroll-y="true" class="lyric">
    <text selectable="true" class="lyric_str">{{lyric_str}}</text>
  </scroll-view>

  <!-- 进度条-->
  <view class="paly-ctrl">
    <text>{{currentTime}}</text>
    <progress class="main" border-radius="5" percent="{{percentNow}}" backgroundColor='rgba(8, 233, 8, 0.877)' activeColor="red"></progress>
    <text>{{durations}}</text>
  </view>

  <!-- 矢量图标库中代码  -->
  <view class='ctrl'>
    <!-- 快退 -->
    <view>
      <text bindtap='kuaitui' class='iconfont icon-kuaitui'></text>
    </view>
    <!--播放 -->
    <view bindtap='play'>
      <text class='{{playFlag ? "iconfont icon-play":"iconfont icon-iconfontstop"}}'></text>
      <!-- <audio src='{{musicSrc}}'></audio> -->
    </view>
    <!-- 快进 -->
    <view>
      <text bindtap='kuaijin' class='iconfont icon-ai19'></text>
    </view>
  </view>
</view>