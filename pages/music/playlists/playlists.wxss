/* pages/music/music_playlists/music_playlists.wxss */

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 5rpx;
  border-radius: 50%;
}

.infos {
  display: flex;
  flex-direction: column;
}

.user {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  align-content: center;
}

.switchUserButton {
  margin: 10px;
}

.playlists {
  order: 1;
  display: flex;
  width: 100%;
}

.unit {
  display: flex;
  flex-direction: row;
  border: 2rpx solid white;
  border-bottom-color: rgba(0, 0, 0, 0.1);
}

.imgforPlayList {
  order: 1;
  flex: 1;
  vertical-align: middle;
}

.imgforPlayList image {
  width: 120rpx;
  height: 120rpx;
}

.playlistName {
  order: 2;
  flex: 3;
  text-align: left;
  align-self: center;
}
